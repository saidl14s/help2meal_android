<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlanco</item>
        <item name="colorPrimaryDark">@color/colorBlanco</item>
        <item name="colorAccent">@color/colorVerde</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="titleTextColor">@color/colorTitleDark</item>
    </style>

    <style name="ButtonCustomGlobal">
        <item name="android:layout_margin">5dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="StyleTitleTolbarCustom">
        <item name="android:fontFamily">@font/montserrat_black</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonLightAzul" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorAzul</item>
        <item name="android:background">@color/colorBlanco</item>
    </style>
    <!--suppress AndroidDomInspection -->
    <style name="ButtonLightVerdeBorder" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorAzul</item>

    </style>

    <style name="ButtonPrimaryBlue" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:background">@color/colorAzul</item>
    </style>

    <style name="ButtonLightBlue" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorAzul</item>
        <item name="android:background">@color/colorBlanco</item>
    </style>

    <style name="ButtonPrimaryGreen" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:background">@drawable/button_greenv2_border</item>
    </style>

    <style name="ButtonLightGreen" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:background">@drawable/button_greenv3_border</item>
    </style>

    <style name="ButtonPrimaryGreenGradient" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:background">@drawable/gradient_green</item>
    </style>

    <style name="ButtonBorderGreen" parent="ButtonCustomGlobal">
        <item name="android:textColor">#00BA40</item>
        <item name="android:background">@drawable/button_green_border</item>
    </style>

    <style name="ButtonBorderBlue" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorAzul</item>
        <item name="android:background">@drawable/button_blue_border</item>
    </style>

    <style name="ButtonCategoryDefault" parent="ButtonCustomGlobal">
        <item name="android:textColor">#78849E</item>
        <item name="android:background">@drawable/button_category</item>
        <item name="android:height">22dp</item>
    </style>

    <style name="ButtonCategorySelected" parent="ButtonCustomGlobal">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_green_border</item>
    </style>


    <style name="InputCustom">
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

</resources>
