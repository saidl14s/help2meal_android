<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlanco</item>
        <item name="colorPrimaryDark">@color/colorBlanco</item>
        <item name="colorAccent">@color/colorVerde</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="titleTextColor">@color/colorTitleDark</item>
    </style>

    <style name="ButtonCustomGlobal">
        <item name="android:layout_margin">5dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="ButtonCustomFat">
        <item name="android:elevation">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="StyleTitleTolbarCustom">
        <item name="android:fontFamily">@font/montserrat_black</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="InputCustom">
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="btn_green_borderer" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorVerde</item>
        <item name="android:background">@drawable/border_green</item>
    </style>

    <style name="btn_green_gradient" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:background">@drawable/gradient_green</item>
    </style>

    <style name="btn_green_primary" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:background">@drawable/background_green</item>
    </style>

    <style name="btn_green_primary_fat" parent="ButtonCustomFat">
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:background">@drawable/background_green</item>
    </style>

    <style name="btn_green_light" parent="ButtonCustomFat">
        <item name="android:textColor">@color/colorVerde</item>
        <item name="android:background">@drawable/no_border</item>
    </style>

    <style name="btn_green_light_fat" parent="ButtonCustomFat">
        <item name="android:textColor">@color/colorVerde</item>
        <item name="android:background">@drawable/no_border</item>
    </style>

    <!--azul-->
    <style name="btn_blue_borderer" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorAzul</item>
        <item name="android:background">@drawable/border_blue</item>
    </style>

    <style name="btn_blue_gradient" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:background">@drawable/gradient_blue</item>
    </style>

    <style name="btn_blue_primary" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:background">@drawable/background_blue</item>
    </style>

    <style name="btn_blue_primary_fat" parent="ButtonCustomFat">
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:background">@drawable/background_blue</item>
    </style>

    <style name="btn_blue_light" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorAzul</item>
        <item name="android:background">@drawable/no_border</item>
    </style>

    <style name="btn_blue_light_fat" parent="ButtonCustomFat">
        <item name="android:textColor">@color/colorAzul</item>
        <item name="android:background">@drawable/no_border</item>
    </style>

    <!--aqua-->
    <style name="btn_aqua_borderer" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorAqua</item>
        <item name="android:background">@drawable/border_aqua</item>
    </style>


    <style name="btn_aqua_active" parent="ButtonCustomGlobal">
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:background">@drawable/background_aqua</item>
    </style>

    <style name="CustomCheckbox" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#707070</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


</resources>
